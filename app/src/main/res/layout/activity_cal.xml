<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lucy.medibook.CalActivity"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carbohydrate Calculator"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Please Enter in Carbohydrates for Meal and Your personal Insulin Ratio."
        android:textAlignment="center"
        android:paddingBottom="20dp"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carbohydrates For Meal:"
        android:paddingLeft="20dp"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <EditText
        android:id="@+id/carb_n1"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="Insulin Ratio:"
        android:paddingTop="20dp"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />
    <TextView
        android:id="@+id/ratioinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(Ratio Format Example 1:6)"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:textAppearance="@android:style/TextAppearance.Material.Small" />

    />
<LinearLayout
    android:layout_width="155dp"
    android:layout_height="69dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/irn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:text="1:"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <EditText
        android:id="@+id/ratio_n2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="number" />
</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white" />

    <Button
        android:id="@+id/divide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="Calculate" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textSize="32sp" />

</LinearLayout>